# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Channel IDs
EVALUATION_RESULT_CHANNEL_ID=channel_id_for_evaluation_results
SUMMARY_NOTIFICATION_CHANNEL_ID=channel_id_for_summary_notifications

# Excluded Channel IDs (comma-separated)
EXCLUDED_CHANNEL_IDS=channel_id_1,channel_id_2,channel_id_3

# Scheduling Configuration
CRON_SCHEDULE=0 18 * * * # Daily at 18:00

# Environment
NODE_ENV=development

# Cost Control Settings
MAX_MESSAGES_PER_THREAD=120 # Maximum messages to include per thread
MAX_MESSAGE_LENGTH=500 # Maximum characters per message
MIN_THREAD_MESSAGES=1 # Minimum messages required to evaluate a thread
MAX_THREADS_PER_EVALUATION=150 # Maximum threads to evaluate per run
CLAUDE_MODEL=claude-3-haiku-20240307 # Use haiku for lower cost (or claude-3-sonnet-20240229)

# API Logging Settings
ENABLE_API_LOGGING=true # Enable logging of Claude API requests/responses
API_LOG_RETENTION_DAYS=30 # Number of days to retain API logs

# AI Instruction Logging Settings
ENABLE_AI_INSTRUCTION_LOGGING=true # Enable logging of AI instructions and responses
AI_LOG_PATH=./docs/logs # Path to store AI instruction logs
AI_LOG_RETENTION_DAYS=180 # Number of days to retain AI instruction logs